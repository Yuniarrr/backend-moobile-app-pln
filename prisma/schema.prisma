generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-musl", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  GI
  ADMIN
  HAR
}

enum Kategori {
  K1 // 30 hari
  K2 // 45 hari
  K3 // 60 hari
  K4 // 90 hari
}

enum StatusLaporan {
  OPEN
  CLOSE
  DELETE
}

enum PIC {
  JARGI
  HARGI
  UPT
  LAINNYA
}

enum FasaTerpasang {
  R
  S
  T
  RST
}

enum StatusOperasiAlat {
  OPERASI
  TIDAK_OPERASI
  DIHAPUS
}

enum KategoriPeralatan {
  PRIMER
  SEKUNDER
  PENDUKUNG
}

model ultg {
  id   String @id @default(uuid())
  nama String

  created_at      DateTime          @default(now())
  updated_at      DateTime          @default(now()) @updatedAt
  deleted_at      DateTime?
  gi              gi[]
  laporan_anomali laporan_anomali[]
  alat            alat[]
}

model gi {
  id   String @id @default(uuid())
  nama String

  ultg_id String
  ultg    ultg   @relation(fields: [ultg_id], references: [id])

  created_at      DateTime          @default(now())
  updated_at      DateTime          @default(now()) @updatedAt
  deleted_at      DateTime?
  bay             bay[]
  users           users[]
  laporan_anomali laporan_anomali[]
  alat            alat[]
}

model bay {
  id          String @id @default(uuid())
  nama_lokasi String
  funloc_id   String

  gi_id String
  gi    gi     @relation(fields: [gi_id], references: [id])

  created_at      DateTime          @default(now())
  updated_at      DateTime          @default(now()) @updatedAt
  deleted_at      DateTime?
  laporan_anomali laporan_anomali[]
  alat            alat[]
}

model users {
  id            String  @id @default(uuid())
  username      String  @unique
  password      String
  role          Role
  refresh_token String?

  gi_id String?
  gi    gi?     @relation(fields: [gi_id], references: [id])

  created_at               DateTime                @default(now())
  updated_at               DateTime                @default(now()) @updatedAt
  deleted_at               DateTime?
  pembuat_laporan_anomali  laporan_anomali[]       @relation("dibuat")
  pengedit_laporan_anomali laporan_anomali[]       @relation("diedit")
  alat                     alat[]
  laporan_tindak_lanjut    laporan_tindak_lanjut[]
}

model jenis_peralatan {
  id                 String            @id @default(uuid())
  nama               String
  kategori_peralatan KategoriPeralatan @default(PRIMER)

  created_at      DateTime          @default(now())
  updated_at      DateTime          @default(now()) @updatedAt
  deleted_at      DateTime?
  laporan_anomali laporan_anomali[]
  alat            alat[]
}

model laporan_anomali {
  id                        String            @id @default(uuid())
  kategori_peralatan        KategoriPeralatan @default(PRIMER)
  kategori_peralatan_detail String?
  anomali                   String
  detail_anomali            String            @db.Text
  kategori                  Kategori          @default(K4)
  tanggal_rusak             DateTime
  tanggal_laporan           DateTime
  batas_waktu               DateTime
  tindak_lanjut_awal        String            @db.Text
  foto                      String
  berita_acara              String
  pic                       PIC?              @default(LAINNYA)
  detail_pic                String?
  nama_pembuat              String
  status                    StatusLaporan     @default(OPEN)
  laporan_anomali_id        String

  ultg_id            String
  ultg               ultg            @relation(fields: [ultg_id], references: [id])
  gi_id              String
  gi                 gi              @relation(fields: [gi_id], references: [id])
  jenis_peralatan_id String
  jenis_peralatan    jenis_peralatan @relation(fields: [jenis_peralatan_id], references: [id])
  bay_id             String?
  bay                bay?            @relation(fields: [bay_id], references: [id])
  alat_id            String
  alat               alat            @relation(fields: [alat_id], references: [id])
  dibuat_oleh        String
  pembuat            users           @relation("dibuat", fields: [dibuat_oleh], references: [id])
  diedit_oleh        String?
  pengedit           users?          @relation("diedit", fields: [diedit_oleh], references: [id])

  created_at            DateTime                @default(now())
  updated_at            DateTime                @default(now()) @updatedAt
  deleted_at            DateTime?
  laporan_tindak_lanjut laporan_tindak_lanjut[]
}

model laporan_tindak_lanjut {
  id               String   @id @default(uuid())
  kegiatan         String   @db.Text
  ket_kegiatan     String   @db.Text
  material         String?
  waktu_pengerjaan DateTime
  foto             String?
  berita_acara     String?
  nama_pembuat     String

  laporan_anomali_id String
  laporan_anomali    laporan_anomali @relation(fields: [laporan_anomali_id], references: [id])
  dibuat_oleh        String
  pembuat            users           @relation(fields: [dibuat_oleh], references: [id])

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
  deleted_at DateTime?
}

model alat {
  id                        String            @id @default(uuid())
  techidentno               String?
  kategori_peralatan        KategoriPeralatan @default(PRIMER)
  kategori_peralatan_detail String?
  tanggal_operasi           DateTime
  serial_id                 String
  fasa_terpasang            FasaTerpasang     @default(R)
  mekanik_penggerak         String?
  media_pemadam             String?
  tipe                      String
  merk                      String
  negara_pembuat            String
  tahun_pembuatan           String
  tegangan_operasi          String
  rating_arus               String?
  breaking_current          String?
  penempatan                String?
  ratio                     String?
  jenis_cvt                 String?
  impedansi                 String?
  daya                      String?
  vector                    String?
  arus_dn                   String?
  // nama                      String
  nameplate                 String?
  status                    StatusOperasiAlat @default(OPERASI)

  ultg_id            String
  ultg               ultg             @relation(fields: [ultg_id], references: [id])
  gi_id              String
  gi                 gi               @relation(fields: [gi_id], references: [id])
  jenis_peralatan_id String?
  jenis_peralatan    jenis_peralatan? @relation(fields: [jenis_peralatan_id], references: [id])
  bay_id             String
  bay                bay?             @relation(fields: [bay_id], references: [id])
  dibuat_oleh        String
  pembuat            users            @relation(fields: [dibuat_oleh], references: [id])

  created_at      DateTime          @default(now())
  updated_at      DateTime          @default(now()) @updatedAt
  deleted_at      DateTime?
  laporan_anomali laporan_anomali[]
}
